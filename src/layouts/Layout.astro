---
import Navbar from "@components/structure/Navbar.astro";
import Footer from "@components/structure/Footer.astro";
import Global from "@components/global.astro";
import "../styles/style.css";

const { title, description } = Astro.props,
  siteName = "LJ";
---

<html lang="es">
  <head>
    <meta name="description" content={description} />
    <title>{title ? `${title} | ${siteName}` : siteName}</title>
    <Global/>
  </head>
  <body>
    <header>
      <Navbar />
    </header>
    <main>
      <slot />
    </main>
    <Footer />
    <script type="module" src="/src/scripts/script.js"></script>
  </body>
</html>
