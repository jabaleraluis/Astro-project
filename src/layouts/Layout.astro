---
import Navbar from "@components/structure/Navbar.astro";
import Footer from "@components/structure/Footer.astro";
import Sidebar from "@components/structure/Sidebar.astro";
import "../styles/style.css";

const { title, description } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.6.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="shortcut icon" href="/src/assets/icon/code.svg" type="image/x-icon" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="collapsed">
    <Navbar />
    <div class="layout">
      <Sidebar />
      <main>
        <slot />
      </main>
    </div>
    <Footer />
    <script type="module" src="/src/scripts/script.js"></script>
  </body>
</html>
