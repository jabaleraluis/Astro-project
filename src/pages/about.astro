---
import Layout from "../layouts/Layout.astro";
---

<Layout title="About" description="Learn more about me and my journey as a web developer.">
  <h1>About</h1>

  <!-- ========== TECH STACK SECTION ========== -->
  <section class="stack__section">
    <div class="stack__container">
      <h1 class="title"><i class="ri-code-s-slash-line"></i> My Tech Stack</h1>
      <div class="stack__wrapper">
        <i class="ri-code-s-slash-line bg-icon-lg"></i>
        <div class="stack__category">
          <h1 class="category-title">Frontend</h1>
          <div class="tech__wrapper">
            <!-- <i class="ri-tools-fill icon-bg"></i> -->
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/frontend/HTML.svg" alt="" />
              </div>
              <div class="text">
                <h1>HTML</h1>
                <p>Markup Language</p>
                <progress value="90" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/frontend/CSS.svg" alt="" />
              </div>
              <div class="text">
                <h1>CSS</h1>
                <p>Styling Language</p>
                <progress value="80" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/frontend/JavaScript.svg" alt="" />
              </div>
              <div class="text">
                <h1>JS ES6+</h1>
                <p>Frontend Logic</p>
                <progress value="60" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/frontend/Bootstrap.svg" alt="" />
              </div>
              <div class="text">
                <h1>Bootstrap</h1>
                <p>UI Framework</p>
                <progress value="90" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/frontend/tailwind.svg" alt="" />
              </div>
              <div class="text">
                <h1>Tailwind</h1>
                <p>CSS Framework</p>
                <progress value="45" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/frontend/vuejs.svg" alt="" />
              </div>
              <div class="text">
                <h1>Vue.js</h1>
                <p>Frontend Framework</p>
                <progress value="30" max="100"></progress>
              </div>
            </div>
          </div>
        </div>
        <div class="stack__category">
          <h1 class="category-title">Backend</h1>
          <div class="tech__wrapper">
            <!-- <i class="ri-server-line icon-bg"></i> -->
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/backend/java.svg" alt="" />
              </div>
              <div class="text">
                <h1>Java</h1>
                <p>Programming Language</p>
                <progress value="40" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/backend/python.svg" alt="" />
              </div>
              <div class="text">
                <h1>Python</h1>
                <p>Programming Language</p>
                <progress value="30" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/backend/laravel.svg" alt="" />
              </div>
              <div class="text">
                <h1>Laravel</h1>
                <p>PHP Framework</p>
                <progress value="30" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/backend/mysql.svg" alt="" />
              </div>
              <div class="text">
                <h1>MySQL</h1>
                <p>Relational Database</p>
                <progress value="60" max="100"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/backend/postgresql.svg" alt="" />
              </div>
              <div class="text">
                <h1>PostgreSQL</h1>
                <p>Relational Database</p>
                <progress value="60" max="100"></progress>
              </div>
            </div>
          </div>
        </div>
        <div class="stack__category">
          <h1 class="category-title">Tools</h1>
          <div class="tech__wrapper">
            <!-- <i class="ri-tools-fill icon-bg"></i> -->
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/tools/git.svg" alt="" />
              </div>
              <div class="text">
                <h1>GIT</h1>
                <p>Version Control</p>
                <progress max="100" value="40"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/tools/github.svg" alt="" class="github" />
              </div>
              <div class="text">
                <h1>GitHub</h1>
                <p>Code Hosting</p>
                <progress max="100" value="40"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/tools/vscode.svg" alt="" />
              </div>
              <div class="text">
                <h1>VS Code</h1>
                <p>Code Editor</p>
                <progress max="100" value="40"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/tools/nodejs.svg" alt="" />
              </div>
              <div class="text">
                <h1>Node.js</h1>
                <p>JavaScript Runtime</p>
                <progress max="100" value="40"></progress>
              </div>
            </div>
            <div class="tech-item">
              <div class="icon">
                <img src="src/assets/index/teck_stack/tools/figma.svg" alt="" />
              </div>
              <div class="text">
                <h1>Figma</h1>
                <p>Design Tool</p>
                <progress max="100" value="40"></progress>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
